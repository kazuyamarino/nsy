{
    "name": "vikry/nsy",
    "description": "NSY is a simple PHP Framework that works well on MVC or HMVC mode",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Vikry Yuansah",
            "email": "admin@kazuyamarino.com"
        }
    ],
	"require": {
        "nesbot/carbon": "^2.39.2",
        "vlucas/phpdotenv": "^3.6.7",
		"nicolab/php-ftp-client": "^1.5.4",
        "optimus/onion": "~1.0"
    },
    "autoload": {
        "psr-4": {
			"System\\": "system/"
        },
		"files": [
			"system/helpers/CodeIgniter_Helpers.php"
		]
    },
    "config": {
        "vendor-dir": "system/vendor/"
    },
	"scripts": {
	    "post-install-cmd": [
			"composer dump-autoload -o",
	        "@nsy_cli_install"
	    ],
	    "nsy_cli_install": [
			"bash INSTALL.sh"
	    ]
	}
}
