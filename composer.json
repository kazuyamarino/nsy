{
    "name": "nsy/nsy",
    "description": "NSY is a simple PHP Framework that works well on MVC or HMVC mode",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Vikry Ganteng",
            "email": "admin@kazuyamarino.com"
        }
    ],
    "require": {
    },
    "autoload": {
        "psr-4": {
            "Core\\": "System/Core/",
            "Models\\": "System/Models/",
            "Controllers\\": "System/Controllers/",
            "Modules\\Models\\": [
				"System/Modules/Homepage/Models/"
			],
			"Modules\\Controllers\\": [
				"System/Modules/Homepage/Controllers/"
			]
        },
        "files": [
			"System/Routes/Web.php",
			"System/Routes/Api.php",
			"System/Libraries/Assets.php"
		]
    },
	"scripts": {
	    "post-install-cmd": [
	        "@test"
	    ],
	    "test": [
	        "mkdir System/Modules/"
	    ]
	},
    "config": {
        "vendor-dir": "System/Vendor/"
    }
}
