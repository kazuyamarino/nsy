{
    "name": "nsy/nsy",
    "description": "NSY is a simple PHP Framework that works well on MVC or HMVC mode",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Vikry Ganteng",
            "email": "admin@kazuyamarino.com"
        }
    ],
	"require": {
        "nesbot/carbon": "^2.27.0",
        "vlucas/phpdotenv": "^3.6.0",
		"nicolab/php-ftp-client": "^1.5.1"
    },
    "autoload": {
        "psr-4": {
			"Razr\\": "system/core/Razr",
            "Razr\\Directive\\": "system/core/Razr/Directive",
            "Razr\\Exception\\": "system/core/Razr/Exception",
            "Razr\\Extension\\": "system/core/Razr/Extension",
            "Razr\\Loader\\": "system/core/Razr/Loader",
            "Razr\\Storage\\": "system/core/Razr/Storage",
            "Routes\\": "system/routes/",
            "Libraries\\": "system/libraries/",
            "Core\\": "system/core/",
            "Models\\": "system/models/",
            "Controllers\\": "system/controllers/",
            "Modules\\Models\\": [
				"system/modules/homepage/models/"
			],
			"Modules\\Controllers\\": [
				"system/modules/homepage/controllers/"
			]
        },
        "files": [
			"system/helpers/NSY_Helpers.php",
			"system/helpers/CI_Helpers.php"
		]
    },
    "config": {
        "vendor-dir": "system/vendor/"
    }
}
